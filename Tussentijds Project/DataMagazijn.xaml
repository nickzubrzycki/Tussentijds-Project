<Window x:Class="Tussentijds_Project.DataMagazijn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="DataMagazijn" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <StackPanel Grid.ColumnSpan="3">
            <Label x:Name="lblUser"></Label>
            <Label x:Name="lblRole"></Label>
        </StackPanel>
        <DockPanel Grid.ColumnSpan="3">
            <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10">
                <Button Margin="10" Width="100" Click="Button_Click_Add">Toevoegen</Button>
                <Button Margin="10" Click="Button_Click_Edit">Bewerken</Button>
                <Button Margin="10" Click="Button_Click_Delete">Verwijderen</Button>
                <Button Margin="10" Width="100" Click="Button_Click_Suppliers">Leveranciers</Button>
            </StackPanel>
            <Button DockPanel.Dock="Bottom" Width="150" Margin="30" Click="Button_Click_Back">Terug</Button>
            <DataGrid DockPanel.Dock="Left" x:Name="dgProducts" Margin="80,80,50,50" ItemsSource="{Binding}" IsReadOnly="true"></DataGrid>
        </DockPanel>
    </Grid>
</Window>
