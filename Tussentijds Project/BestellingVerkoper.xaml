<Window x:Class="Tussentijds_Project.BestellingVerkoper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="BestellingVerkoper" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <StackPanel>
            <DockPanel>
                <Label x:Name="lblUser" DockPanel.Dock="Left" FontStyle="Italic" VerticalContentAlignment="Center"></Label>
                <Button DockPanel.Dock="Right" Width="100" Height="20" HorizontalAlignment="Right" Margin="10,3" Click="Button_Click_Back">Terug</Button>
            </DockPanel>
            <TabControl>
                <TabItem Header="Overzicht">
                    <StackPanel>                        
                            <DataGrid x:Name="dgOrders" Margin="5,10" Height="280" ItemsSource="{Binding}" IsReadOnly="true" AutoGenerateColumns="false" HorizontalAlignment="Left" CanUserSortColumns="True">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="ID" Width="85" CanUserSort="True" SortMemberPath="ID">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding OrderId}"></Label>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Klant" Width="200" CanUserSort="True" SortMemberPath="Klant">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding Customer}"></Label>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Datum" Width="200" CanUserSort="True" SortMemberPath="Datum">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding OrderDate}"></Label>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>                                    
                                </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <DataGrid x:Name="dgOrderDetails" ItemsSource="{Binding}" IsReadOnly="true" AutoGenerateColumns="false" HorizontalAlignment="Left">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="Product">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Label Content="{Binding Name}"></Label>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Aantal">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Label Content="{Binding Quantity}"></Label>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                            </DataGrid>                        
                    </StackPanel>
                </TabItem>
                <TabItem Header="Nieuwe bestelling">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" Margin="50,0">
                                <Label VerticalContentAlignment="Center">Naam klant:</Label>
                                <ComboBox x:Name="cbCustomers" Margin="5" Width="200" Height="35">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Name}"></Label>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="50,0">
                                <Label VerticalContentAlignment="Center">Datum:</Label>
                                <DatePicker Height="35" Width="200" VerticalContentAlignment="Center"></DatePicker>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Label VerticalContentAlignment="Center" Width="55">Product:</Label>
                                    <ComboBox x:Name="cbProducts" Margin="5" Width="200" Height="35">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding Name}"></Label>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Label Width="55">Aantal:</Label>
                                    <TextBox Width="50"></TextBox>
                                </StackPanel>
                                <Button Width="100" HorizontalAlignment="Left" Margin="10">Toevoegen</Button>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Right">
                            <ListView Margin="10">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </DockPanel>                  
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
