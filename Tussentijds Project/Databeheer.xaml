<Window x:Class="Tussentijds_Project.Databeheer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="Databeheer" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <StackPanel HorizontalAlignment="Left">
            <Label x:Name="lblUser" Background="LightGray" FontStyle="Italic"></Label>
            <Label x:Name="lblRole" Background="LightGray" FontStyle="Italic"></Label>
        </StackPanel>
        <StackPanel Margin="50" VerticalAlignment="Center">
            <Button x:Name="btnUsers" Width="150" Margin="10" Click="Button_Click">Users</Button>
            <Button x:Name="btnMagazijn" Width="150" Margin="10" Click="Button_Click_1">Magazijn</Button>
            <Button x:Name="btnVerkoop" Width="150" Margin="10" Click="Button_Click_2">Klanten</Button>
            <Button Width="150" Margin="30" Click="Button_Click_3">Terug</Button>
        </StackPanel>
    </Grid>
</Window>
