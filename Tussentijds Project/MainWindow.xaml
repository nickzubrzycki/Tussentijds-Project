<Window x:Class="Tussentijds_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">
        <Image Source="images/logo.png" Opacity="0.4"/>
        <StackPanel Margin="100" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Width="70">Username:</Label>
                <TextBox x:Name="txtUsername" Width="200" VerticalContentAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Width="70">Password:</Label>
                <PasswordBox x:Name="txtPassword" Width="200" VerticalContentAlignment="Center"></PasswordBox>
            </StackPanel>            
            <Button Width="100" Margin="20" HorizontalAlignment="Center" Click="Button_Click">Log in</Button>
        </StackPanel>        
    </Grid>
</Window>
