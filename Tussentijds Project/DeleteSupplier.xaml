<Window x:Class="Tussentijds_Project.DeleteSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="DeleteSupplier" Height="321.591" Width="530.682" SizeToContent="WidthAndHeight">
    <Grid Background="AliceBlue">
        <Label HorizontalContentAlignment="Center" Margin="10" Grid.ColumnSpan="2">Selecteer de leverancier die u wenst te verwijderen.</Label>
        <StackPanel Margin="60">
            <ComboBox x:Name="cbSuppliers" Width="200">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Name}"></Label>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,70" Width="350" Height="52" RenderTransformOrigin="0.487,0.557">
                <Button Width="150" Height="25" Margin="10" Click="Button_Click_Delete">Leverancier verwijderen</Button>
                <Button Width="150" Height="25" Margin="10" Click="Button_Click_Back">Annuleren</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
