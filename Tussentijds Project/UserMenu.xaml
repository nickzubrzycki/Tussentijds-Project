<Window x:Class="Tussentijds_Project.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="UserMenu" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <StackPanel HorizontalAlignment="Left">
            <Label x:Name="lblUser" Background="LightGray" FontStyle="Italic"></Label>
            <Label x:Name="lblRole" Background="LightGray" FontStyle="Italic"></Label>
        </StackPanel>
        <StackPanel Margin="50,110,50,109" VerticalAlignment="Center" Grid.ColumnSpan="2">
            <Button Width="150" Margin="10" Click="Button_Click">Databeheer</Button>
            <Button Width="150" Margin="10" Click="Button_Click_1">Overzicht</Button>
            <Button Width="150" Margin="10" Click="Button_Click_2">Bestelling</Button>
            <Button Width="150" Margin="30" Click="Button_Click_3">Uitloggen</Button>
        </StackPanel>
    </Grid>
</Window>
