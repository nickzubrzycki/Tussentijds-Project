                                </StackPanel>
                                <DataGrid DockPanel.Dock="Left" x:Name="dgProductsAdd" Margin="0,10" Height="250" ItemsSource="{Binding}" IsReadOnly="true" AutoGenerateColumns="false" HorizontalAlignment="Left">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="Naam" Width="140">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding Name}"></Label>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Eenheidsprijs" Width="85">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding UnitPrice}"></Label>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Aantal" Width="85">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding Stock}"></Label>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
