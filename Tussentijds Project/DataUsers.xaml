<Window x:Class="Tussentijds_Project.DataUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tussentijds_Project"
        mc:Ignorable="d"
        Title="DataUsers" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <StackPanel HorizontalAlignment="Left">
            <Label x:Name="lblUser" Background="LightGray" FontStyle="Italic"></Label>
            <Label x:Name="lblRole" Background="LightGray" FontStyle="Italic"></Label>
        </StackPanel>
        <DockPanel Grid.ColumnSpan="3">
            <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10">
                <Button Margin="10" Width="100" Click="Button_Click">Toevoegen</Button>
                <Button Margin="10" Click="Button_Click_1">Bewerken</Button>
                <Button Margin="10" Click="Button_Click_2">Verwijderen</Button>
            </StackPanel>
            <Button DockPanel.Dock="Bottom" Width="150" Margin="30" Click="Button_Click_3">Terug</Button>
            <DataGrid DockPanel.Dock="Left" x:Name="dgUsers" Margin="80,80,50,50" ItemsSource="{Binding}" IsReadOnly="true"></DataGrid>
        </DockPanel>
    </Grid>
</Window>
